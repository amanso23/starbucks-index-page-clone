---
import Container from "@components/Container.astro";
import type { Welcome } from "src/types";
import Button from "@components/ui/Button.astro";

interface Props {
    welcome: Welcome
}

const { welcome } = Astro.props;

const { Content } = await welcome.render();

const {
    data
} = welcome

const { 
    src,
    title,
    buttonContent
} = data

---


<section>
    <picture class="w-auto">
        <img
            src={src}
            alt={`${title}`}
            class="w-full"
        />
    </picture>
    <Container>
        <div class="flex flex-col gap-y-5 py-6 w-5/6 md:w-full  ">
            <h1 class="text-[27px]">{title}</h1>
            <Content />
           <Button variant="green"> 
              {buttonContent}
           </Button>
       </div>
    </Container>  
</section>